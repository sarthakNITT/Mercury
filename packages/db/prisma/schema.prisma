// packages/db/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int      // Stored in minor units
  currency    String   @default("INR")
  categoryId  String
  imageUrl    String?
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  
  // Relations
  category    Category @relation(fields: [categoryId], references: [id])
  events      Event[]
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())

  // Relations
  events    Event[]
}

model Event {
  id        String    @id @default(cuid())
  userId    String
  productId String
  type      String
  meta      Json?     // Changed from String to Json for Postgres
  createdAt DateTime  @default(now())

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@index([createdAt])
  @@index([type])
  @@index([userId])
  @@index([productId])
}

model Payment {
  id                    String   @id @default(cuid())
  userId                String
  productId             String
  amount                Int
  currency              String
  status                String   // PENDING, PAID, FAILED, CHALLENGED
  stripeSessionId       String?  @unique
  stripePaymentIntentId String?  @unique
  createdAt             DateTime @default(now())
}

model StripeWebhookEvent {
  id            String   @id @default(cuid())
  stripeEventId String   @unique
  createdAt     DateTime @default(now())
}

model AppConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  valueJson Json
  updatedAt DateTime @updatedAt
}

model ModelRegistry {
  id        String   @id @default(cuid())
  name      String
  version   String
  status    String   // ACTIVE, ARCHIVED
  modelPath String?
  modelJson Json?
  createdAt DateTime @default(now())
}

model RiskRule {
  id            String   @id @default(cuid())
  name          String
  enabled       Boolean  @default(true)
  weight        Int
  conditionJson Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
